@model System.Collections.Generic.List<FreeCourse.Web.Models.ViewModels.Catalogs.CourseViewModel>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Courses</h5>
                @if (Model.Any())
                {
                    <table class="table table-striped table-bordered">
                                        <thead>
                                        <tr>
                                            <th>Picture</th>
                                            <th>Course Name</th>
                                            <th>Price</th>
                                            <th>Duration</th>
                                            <th>Category</th>
                                            <th>Processes</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td><img style="width: 72px;" src="@item.StockPictureUrl" class="img-thumbnail"/></td>
                                                <td>@item.Name</td>
                                                <td>@item.Price</td>
                                                <td>@item.Feature.Duration</td>
                                                <td>@item.Category.Name</td>
                                                <td>
                                                    <a asp-controller="Course" asp-action="Update" asp-route-courseId="@item.Id" class="btn btn-success btn-sm">Update</a>
                                                    <a asp-controller="Course" asp-action="Delete" asp-route-courseId="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                                                </td>
                                            </tr>
                                        }
                                        </tbody>
                                    </table>
                }
                else
                {
                    <div class="alert alert-info">
                        No registered courses found
                    </div>
                }
                <a asp-controller="Course" asp-action="Create" class="btn btn-primary mb-3">Create a New Course</a>
            </div>
        </div>
    </div>
</div>