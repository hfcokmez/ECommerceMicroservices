@model FreeCourse.Web.Models.ViewModels.Catalogs.CourseViewModel;

<div class="row">
    <div class="col-md-9">
        <div class="card">
            <img src="@Model.StockPictureUrl" class="card-img-top">
            <div class="card-body">
                <div class="card-title">@Model.Name</div>
                <div class="card-text">@Model.Description</div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title">Price: @Model.Price TRY</h3>
                <a href="#" class="btn btn-primary btn-block">Add to Cart</a>
            </div>
        </div>
    </div>
</div>