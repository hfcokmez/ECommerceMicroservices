@model FreeCourse.Web.Models.ViewModels.Catalogs.CourseViewModel;
<div class="container">
    <div class="row mt-3">
        <div class="col-md-9">
            <div class="card">
                <img src="@Model.StockPictureUrl" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title">@Model.Name</h5>
                    <div class="card-text">@Model.Description</div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Price: @Model.Price TRY</h5>
                    <a href="#" class="btn btn-primary btn-block">Add to Cart</a>
                </div>
            </div>
        </div>
    </div>
</div>