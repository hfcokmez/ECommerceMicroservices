@model List<FreeCourse.Web.Models.ViewModels.Orders.OrderViewModel>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="container mt-3">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Payment History</h5>

                @if (Model.Any())
                {
                    <table class="table table-striped table-bordered">
                        <tr>
                            <th>Payment Number</th>
                            <th>Date</th>
                            <th>Details</th>
                        </tr>
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td>@order.Id</td>
                                <td>@order.CreatedDate.ToShortDateString()</td>
                                <td>
                                    <table class="table table-striped">
                                        <tr>
                                            <th>Course Name</th>
                                            <th>Price</th>
                                        </tr>
                                        @foreach (var item in order.OrderItems)
                                        {
                                            <tr>
                                                <td>@item.ProductName</td>
                                                <td>@item.Price</td>
                                            </tr>
                                        }
                                    </table>
                                </td>
                            </tr>
                        }
                    </table>
                }
                else
                {
                    <div class="alert alert-info">No courses are found</div>
                }
            </div>
        </div>
    </div>
</div>